            <ImageButton android:id="@id/flash_button" android:background="@drawable/qr_button_ripple_effect" android:layout_width="@dimen/qr_scan_icon_size" android:layout_height="@dimen/qr_scan_icon_size" android:src="@drawable/qr_ic_capture_light_on" android:scaleType="fitXY" android:adjustViewBounds="true" android:onClick="onClickEvent" android:contentDescription="@string/light_on" />
