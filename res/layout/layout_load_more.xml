<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="@dimen/news_feed_refresh_load_more_view_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/loading_view" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ProgressBar android:id="@id/pb" style="@style/RefreshProgressBarStyle" />
        <TextView android:id="@id/loading_view_toast" android:text="@string/content_blocker_download_preference_loading" style="@style/LoadMoreViewLoadingTextStyle" />
    </LinearLayout>
    <TextView android:ellipsize="end" android:gravity="center" android:id="@id/tv_load_fail" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/network_not_available_check_it" android:maxLines="1" style="@style/LoadMoreViewErrorTextStyle" />
</RelativeLayout>
